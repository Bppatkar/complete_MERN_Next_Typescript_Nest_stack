generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// this file will be used for any model that you want to create this project
// creating a CRUD opertaion where author can create a book
// creating schema using model keyword
// for syncing that model with database need migrate cmd 
// [npx prisma migrate dev --name init]

model Book {
  id Int @id @default(autoincrement())
  title String
  publishedDate DateTime
  authorId Int
  author Author @relation(fields: [authorId], references: [id], onDelete: Cascade)
}

model Author {
  id Int @id @default(autoincrement())
  name String
  books Book[]
}

